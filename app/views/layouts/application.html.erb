  <title>Hana's Tradewind Cottage</title>
  <%= stylesheet_link_tag('application', media: 'all') %>
  <%= stylesheet_link_tag('mobile') if mobile_device? %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag('favicon.ico') %>
