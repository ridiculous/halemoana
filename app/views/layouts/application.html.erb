  <header id="nav_bar">
    <div class="wrapper nav">
      <div id="logo" class="deep-text">
        <h1><span class="hidden-mobile">Hana's</span> Tradewind Cottage</h1>
      </div>
      <ul id="page_nav">
        <li>
          <a href="#reservations" class="scroll-to">Reservations</a>
        </li>
        <li>
